<div class="container">
  <div class="my-4">
    <h4 class="information px-5">注⽂情報⼊⼒</h4>
  </div>

  <%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
  <table class="table table-borderless">
    <tbody>
      <tr><td class="font-weight-bold">支払方法</td></tr>
      <tr>
        <td>
          <%= f.radio_button :payment_method, "credit" %>
          <%= f.label :payment_method, "クレジットカード" %>
        <br>
          <%= f.radio_button :payment_method, "bank" %>
          <%= f.label :payment_method, "銀行振込" %>
        </td>
      </tr>

      <tr><td class="font-weight-bold">お届け先</td></tr>
      <tr>
        <td>
          <%= f.radio_button :address_kind, 0, checked: true %>
          <%= f.label :address, "ご⾃⾝の住所" %>
          <br>
          <%= @customer.address %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.radio_button :address_kind, 1 %>
          <%= f.label :address, "登録済住所から選択" %>
          <br>
          <%= f.collection_select :address_id, @addresses, :id, :destination %>
        </td>
      </tr>
      <tr>
        <td>
          <%= f.radio_button :address_kind, 2 %>
          <%= f.label :address, "新しいお届け先" %>
        </td>
        <tr>
          <td>郵便番号(ハイフンなし)</td>
          <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋⾕区代々⽊神園町0-0" %></td>
        </tr>
        <tr>
          <td>宛名</td>
          <td><%= f.text_field :name, autocomplete: "name", placeholder: "令和道子" %></td>
        </tr>
        <tr>
          <td><%= f.submit '確認画面へ進む', class: "btn btn-primary" %></td>
        </tr>
    </tbody>
  </table>
  <% end %>






</div>