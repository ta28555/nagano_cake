<div class="container">
  <div class="my-4">
    <h4 class="information px-5">注⽂情報⼊⼒</h4>
  </div>

  <table class="table table-borderless">
    <tbody>
    <%= form_with model: @orders, url: orders_path, local:true do |f| %>
      <tr><td class="font-weight-bold">支払方法</td></tr>
      <tr><td>
        <%= f.radio_button :payment_method, :true, checked: true %>
        <%= f.label :payment_method, "クレジットカード" %>
      </td></tr>
      <tr><td>
        <%= f.radio_button :payment_method, :false %>
        <%= f.label :payment_method, "銀行振込" %>
      </td></tr>

      <tr><td class="font-weight-bold">お届け先</td></tr>
      <tr><td>
        <%= f.radio_button :address, :true, checked: true %>
        <%= f.label :address, "ご⾃⾝の住所" %>
        <br>
        <%= @customer.address %>
      </td></tr>
      <tr><td>
        <%= f.radio_button :address, :false %>
        <%= f.label :address, "登録済住所から選択" %>
        <br>
        <%= f.collection_select :address_id, @addresses, :id, :destination %>
      </td></tr>

    <% end %>
    </tbody>

  </table>







</div>