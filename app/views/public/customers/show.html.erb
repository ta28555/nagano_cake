<div class="container">
  <div class="my-4">
    <h4 class="information px-5">マイページ</h4>
  </div>

  <div>
    登録情報
    <%= link_to "編集する", edit_customers_path, class: 'btn btn-success' %>
  </div>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>氏名</td>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </tbody>
    </table>
    <div>
      配送先
      <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary' %>
    </div>
    <div>
      注文履歴
      <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %>
    </div>
</div>