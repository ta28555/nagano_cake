<div class="container">
  <div class="my-4">
    <h4 class="information px-5">会員情報編集</h4>
  </div>

  <%= form_with model: @customer, url: customers_path, local: true do |f| %>
    <%#= render "devise/shared/error_messages", resource: resource %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row">名前</th>
          <td><%= f.text_field :last_name, autofocus: true %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>
        <tr>
          <th scope="row">フリガナ</th>
          <td><%= f.text_field :last_name_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
          <th scope="row">郵便番号(ハイフンなし) </th>
          <td><%= f.text_field :postal_code, autocomplete: "postal_code" %></td>
        </tr>
        <tr>
          <th scope="row">住所</th>
          <td colspan="3"><%= f.text_field :address, autocomplete: "address" %></td>
        </tr>
        <tr>
          <th scope="row">電話番号(ハイフンなし) </th>
          <td><%= f.telephone_field :telephone_number, autocomplete: "telephone_number" %></td>
        </tr>
        <tr>
          <th scope="row">メールアドレス</th>
          <td><%= f.email_field :email, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "編集内容を保存", class: 'px-5 btn btn-success' %></td>
          <td><%= link_to "退会する", customers_confirm_path, class: 'px-5 btn btn-danger' %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>