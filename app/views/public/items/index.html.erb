<div class="container">
  <div>
    <h2 class="mx-5 my-3 font-weight-bold">
      商品一覧
      <span class="font-weight-light"> (全<%= @items.count %>件)</span>
    </h2>
  </div>
  <div class="index-frame">
    <% @items.each do |item| %>
      <div class="new-item-list m-2">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, class: "new-item-box mb-2" %>
            <% end %>
            <p class="m-1 pl-1 text-left font-weight-bold"><%= truncate(item.name, length: 13) %></p>
            <p class="m-1 pl-1 text-left font-weight-bold">¥<%= item.price.to_s(:delimited) %></p>
          </div>
    <% end %>
    <%= paginate @items_page %>
  </div>

</div>