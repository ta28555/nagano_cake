<div class="container">
  <div class="my-4">
    <h4 class="information px-5">商品一覧</h4>
  </div>

  <%= form_with model: @item, local:true do |f| %>
  <table class="table table-borderless">
    <tbody>
      <tr>
        <th scope="row">商品画像</th>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <th scope="row">商品名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr>
        <th scope="row">商品説明</th>
        <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th scope="row">ジャンル</th>
        <td><%#= f.collection_select :genre, Jenre.all, :class, :genre %></td>
      </tr>
      <tr>
        <th scope="row">税抜価格</th>
        <td><%= f.number_field :price %>円</td>
      </tr>
      <tr>
        <th scope="row">販売ステータス</th>
        <td>
          <%= f.label :is_active, "販売中" %>
          <%= f.radio_button :is_active, :true, checked: true %>
        </td>
        <td>
          <%= f.label :is_active, "販売停止中" %>
          <%= f.radio_button :is_active, :false %>
        </td>
      </tr>
      <tr>
        <th scope="row"></th>
        <td><%= f.submit '新規登録' %></td>
      </tr>
      </tr>
    </tbody>
  </table>
  <% end %>

</div>