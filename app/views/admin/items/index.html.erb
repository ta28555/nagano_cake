<div class="container">
  <div class="my-4">
    <h4 class="information px-5">商品一覧</h4>
    <button type="button" class="btn btn-light shadow active rounded-circle">
      <%= link_to "+", new_admin_item_path, class: 'text-dark' %>
    </button>
  </div>

  <table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">商品ID</th>
      <th scope="col">商品名</th>
      <th scope="col">税抜価格</th>
      <th scope="col">ジャンル</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item) %></td>
      <td><%= item.price.to_s(:delimited) %></td>
      <td><%= item.genre.name %></td>
      <td><%#= item.is_active.gsub(/true|false/, "true" => "販売中", "false" => "販売停止中") %></td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>