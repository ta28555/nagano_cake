<div class="container">
  <div class="my-4">
    <h4 class="information px-5">商品詳細</h4>
  </div>

  <table class="table table-borderless">
    <tbody>
      <tr>
        <td rowspan="5"><%= attachment_image_tag @item, :image, :fill, 300, 200, format:'jpg', fallback:"no_image.jpg" %></td>
        <td>商品名</td>
        <td colspan="2"><%= @item.name%></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td colspan="2"><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td ><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格<br>(税抜価格)</td>
        <td>
          <%= @item.tax_price.to_s(:delimited) %>
          (<%= @item.price.to_s(:delimited) %>) 円
        </td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td></td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></td>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>