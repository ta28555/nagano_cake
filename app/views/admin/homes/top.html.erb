<div class="container">
  <div class="my-4">
    <h4 class="information px-5">注文履歴一覧</h4>
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @order.each do |order| %>
      <tr>
        <td><%= link_to order.order_ditails.created_at %></td>
        <td><%= order.customer.name %></td>
        <td><%= order.order_ditails.amount %></td>
        <td><%= order.status %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>