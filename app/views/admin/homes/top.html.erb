<div class="container">
  <div class="my-4">
    <h4 class="information px-5">注文履歴一覧</h4>
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">購入日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
        <th scope="col">注文ステータス</th>
      </tr>
    </thead>
    <% @order.each do |order| %>
    <tbody>
      <tr>
        <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'), admin_order_path(order.id) %></td>
        <td><%= order.customer.name %></td>
        <td><%= order.order_ditails.all.sum(:amount) %></td>
        <td><%= order.status_i18n %></td>
      </tr>
    </tbody>
    <% end %>
  </table>

  <%= paginate @order %>

</div>