<div class="container">
  <div class="my-4">
    <h4 class="information px-5">会員一覧</h4>
  </div>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th scope="col">会員ID</th>
        <th scope="col">氏名</th>
        <th scope="col">メールアドレス</th>
        <th scope="col">ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.name, admin_customer_path(customer.id) %></td>
        <td><%= customer.email %></td>
        <% if customer.is_active == true %>
        <td class="text-success">有効</td>
        <% else %>
        <td class="text-secondary">退会</td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @customers %>
</div>