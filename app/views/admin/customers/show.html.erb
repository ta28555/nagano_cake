<div class="container">
  <div class="my-4">
    <h4 class="information px-5">
      <%= @customer.name %>さんの会員詳細
    </h4>
  </div>

  <table class="table table-borderless">
    <tbody>
      <tr>
        <td>会員ID</td>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <td>郵便番号</td>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td colspan="2"><%= @customer.address %></td>
      </tr>
      <tr>
        <td>電話番号</td>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <td>会員ステータス</td>
        <% if @customer.is_active == true %>
        <td class="text-secondary">退会</td>
        <% else %>
        <td class="text-success">有効</td>
        <% end %>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %></td>
        <td><%= link_to "注文履歴を見る",admin_root_path, class: "btn btn-primary" %></td>
      </tr>
    </tbody>
  </table>
</div>