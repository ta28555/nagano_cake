<div class="container">
  <div class="my-4">
    <h4 class="information px-5">ジャンル一覧・追加</h4>
  </div>

  <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row">ジャンル名</th>
          <td><%= f.text_field :name, autofocus: true, placeholder: "ジャンル名" %></td>
          <td>
            <%= f.submit '新規登録', class: "btn btn-success" %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>