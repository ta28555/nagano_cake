<div class="container">
  <div class="my-4">
    <h4 class="information px-5">ジャンル編集</h4>
  </div>

  <%= form_with model: @genre, url: admin_genre_path, local:true do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row">ジャンル名</th>
          <td><%= f.text_field :name, autofocus: true %></td>
          <td>
            <%= f.submit '変更を保存', class: "btn btn-success" %>
          </td>
        </tr>
      </tbody>
    </table>
  <% end %>
</div>