
<div class="container">
  <div class="my-4">
    <h4 class="information px-5">ログイン</h4>
  </div>
  <div>
    <h5 class="information px-5 my-5">会員の⽅はこちらからログイン</h5>
  </div>

  <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th scope="row">メールアドレス</th>
          <td colspan="3"><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
        </tr>
        <tr>
          <th scope="row">パスワード</th>
          <td colspan="3"><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>
        <tr>
          <th scope="row"></th>
          <td><%= f.submit "ログイン", class: 'px-5 btn btn-primary' %></td>
          <td></td>
          <td></td>
        </tr>
      </tbody>
    </table>
  <% end %>

  <div>
    <h5 class="information px-5 my-5">会員の⽅会員登録がお済みでない⽅</h5>
  </div>
  <div>
    <p class="pl-5">
      <%= link_to "こちら",new_customer_registration_path %>　から新規登録を行ってください。
    </p>
  </div>
</div>
